{
    "name": "pick-formatter",
    "displayName": "Pick Formatter",
    "description": "Pick Basic formatter",
    "version": "0.0.2",
    "publisher": "scragg0x",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:pick"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "pick",
                "aliases": [
                    "pick"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}